@model PC2MKTS.ViewModel.CuentasBancariasViewModel
@{
    ViewData["Title"] = "Registo de Cuentas Bancarias";
}
<div class="container mt-4">
    <!-- Mensaje de éxito -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <!-- Formulario para registrar cuentas bancarias -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Registro de Cuentas Bancarias</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Registrar" method="post">
                        <input type="hidden" asp-for="FormCuentasBancarias.id" />
                        
                        <div class="mb-3">
                            <label asp-for="FormCuentasBancarias.nomTit" class="form-label">Nombre del Titular de la Cuenta</label>
                            <input asp-for="FormCuentasBancarias.nomTit" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="FormCuentasBancarias.tipCuen" class="form-label">Tipo de Cuenta Bancaria</label>
                            <input asp-for="FormCuentasBancarias.tipCuen" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="FormCuentasBancarias.salIni" class="form-label">Saldo Inicial</label>
                            <input asp-for="FormCuentasBancarias.salIni" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="FormCuentasBancarias.correO" class="form-label">Correo Electrónico del Titular</label>
                            <input asp-for="FormCuentasBancarias.correO" class="form-control" type="email" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
